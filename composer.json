{
    "name": "omnipay/mpgs",
    "type": "library",
    "description": "MPGS driver for the Omnipay payment processing library",
    "keywords": [
        "gateway",
        "mastercard payment gateway service",
        "merchant",
        "mpgs"
    ],
    "homepage": "https://github.com/sudiptpa/omnipay-mpgs",
    "license": "MIT",
    "authors": [
        {
            "name": "Sujip Thapa",
            "email": "sudiptpa@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": { "Omnipay\\Mpgs\\" : "src/" }
    },
    "require": {
        "php": "^7.2|^8.0",
        "omnipay/common": "~3.0"
    },
    "require-dev": {
        "omnipay/tests": "^4.1.2",
        "squizlabs/php_codesniffer": "^3"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs -p --standard=PSR2 src/",
        "fix-style": "phpcbf -p --standard=PSR2 src/"
    },
    "prefer-stable": true
}
